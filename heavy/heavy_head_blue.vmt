"VertexLitGeneric"
{
	"$basetexture" "models/player/heavyplayer/heavy_head"
	// $bumpmap is a shared 16x16 flat normal map, and is needed or lightwarp won't shade correctly.
	"$bumpmap"     "models/player/heavyplayer/shared_normal"	
	"$detailscale" "1"
	"$detailblendfactor" .01
	"$detailblendmode" 6


	"$yellow" "0"
	"$one" "1"


	"$phong" "1"
	"$phongexponent" "20"
	"$phongboost" ".3"	
	"$lightwarptexture" "models/player/heavyplayer/pyro_lightwarp"
	"$phongfresnelranges"	"[.3 1 8]"
	"$halflambert" "0"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "4"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "2"										// Boost for ambient cube component of rim lighting
}